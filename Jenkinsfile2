def gv
pipeline {
    agent any

    tools {
        maven 'maven3.9'
    }
    stages {
        stage('init'){
            steps {
                script{
                    gv = load 'script.groovy'
                }
            }
        }
        stage('build jar') {
            steps {
                script {
                    gv.buildJAR()
                }
            }
        }
        stage('build image') {
            steps {
                script {
                    gv.buildImage()
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    sh 'deploying the image...'   
                }
            }
        }  
    }
}
